<div class="container pad">  
  <h1>Edit Profile</h1>
  <%= bootstrap_form_for(:user, method: :put) do |f| %>
    <%= f.text_field :name %>

    <%= f.email_field :email %>

    <%= f.password_field :password %>

    <%= f.file_field :screenshot %>

    <%= f.submit 'Edit Profile', class: 'btn btn-success' %>
  <% end %>
</div>
